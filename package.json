{
  "name": "clean-avito",
  "displayName": "CleanAvito",
  "version": "1.1.0",
  "description": "Block unwanted sellers and listings on Avito",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:userscript": "vite build --config vite.config.userscript.ts",
    "build:all": "wxt build && wxt build -b firefox && vite build --config vite.config.userscript.ts",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:all": "wxt zip && wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write ."
  },
  "author": "xob0t",
  "license": "MIT",
  "homepage": "https://github.com/xob0t/CleanAvito",
  "bugs": {
    "url": "https://github.com/xob0t/CleanAvito/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "wxt": "^0.19.29"
  }
}

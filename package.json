{
  "name": "ave-script",
  "displayName": "AVE script",
  "version": "1.1.0",
  "description": "Block unwanted sellers and listings on Avito",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:userscript": "vite build --config vite.config.userscript.ts",
    "build:all": "wxt build && wxt build -b firefox && vite build --config vite.config.userscript.ts",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:all": "wxt zip && wxt zip -b firefox",
    "postinstall": "wxt prepare",
    "typecheck": "tsc --noEmit"
  },
  "author": "xob0t",
  "license": "MIT",
  "homepage": "https://github.com/xob0t/ave-script",
  "bugs": {
    "url": "https://github.com/xob0t/ave-script/issues"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vite": "^6.0.0",
    "wxt": "^0.19.17"
  }
}
